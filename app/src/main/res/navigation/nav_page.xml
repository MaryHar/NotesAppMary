<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_page"
    app:startDestination="@id/splashScreenFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.myprojectnotesapp.ui.SplashAndIntroScreen.RegisterOrLogin.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" />
    <fragment
        android:id="@+id/registerFragment"
        android:name="com.example.myprojectnotesapp.ui.SplashAndIntroScreen.RegisterOrLogin.RegisterFragment"
        android:label="fragment_register"
        tools:layout="@layout/fragment_register" />
    <fragment
        android:id="@+id/splashScreenFragment"
        android:name="com.example.myprojectnotesapp.ui.SplashAndIntroScreen.SplashScreen.viewPagerSlide.SplashScreenFragment"
        android:label="fragment_splash_screen"
        tools:layout="@layout/fragment_splash_screen" >
        <action
            android:id="@+id/action_splashScreenFragment_to_splashScreen2Fragment"
            app:destination="@id/splashScreen2Fragment" />
    </fragment>
    <fragment
        android:id="@+id/splashScreen2Fragment"
        android:name="com.example.myprojectnotesapp.ui.SplashAndIntroScreen.SplashScreen.viewPagerSlide.SplashScreen2Fragment"
        android:label="fragment_splash_screen2"
        tools:layout="@layout/fragment_splash_screen2" >
        <action
            android:id="@+id/action_splashScreen2Fragment_to_registerOrLoginPageFragment"
            app:destination="@id/registerOrLoginPageFragment" />
    </fragment>
    <fragment
        android:id="@+id/registerOrLoginPageFragment"
        android:name="com.example.myprojectnotesapp.ui.SplashAndIntroScreen.SplashScreen.viewPagerSlide.RegisterOrLoginPageFragment"
        android:label="fragment_register_or_login_page"
        tools:layout="@layout/fragment_register_or_login_page" >
        <action
            android:id="@+id/action_registerOrLoginPageFragment_to_loginFragment"
            app:destination="@id/loginFragment" />
        <action
            android:id="@+id/action_registerOrLoginPageFragment_to_registerFragment"
            app:destination="@id/registerFragment" />
    </fragment>
</navigation>