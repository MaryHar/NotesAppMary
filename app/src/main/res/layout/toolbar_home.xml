<androidx.appcompat.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/pinkSecondaryDark"
    android:orientation="horizontal">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/pinkSecondaryDark"

        android:layout_height="wrap_content"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_toolbar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="8dp"
            android:layout_marginLeft="8dp"
            android:text="Notes"
            android:textColor="@color/white"
            android:fontFamily="@font/segoe_ui_bold"
            android:textSize="26sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageButton
            android:id="@+id/ib_search"
            android:layout_width="68dp"
            android:layout_height="68dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/pinkSecondaryDark"
            android:scaleType="centerInside"
            android:src="@drawable/ic_search"
            app:layout_constraintBottom_toBottomOf="@+id/tv_toolbar"
            app:layout_constraintEnd_toStartOf="@+id/ib_menu"
            app:layout_constraintTop_toTopOf="@+id/tv_toolbar"
            app:layout_constraintVertical_bias="0.447" />

<!--        <ImageButton-->
<!--            android:id="@+id/action_night_mode"-->
<!--            android:layout_width="68dp"-->
<!--            android:layout_height="68dp"-->
<!--            android:layout_marginEnd="84dp"-->
<!--            android:backgroundTint="@color/pinkSecondaryDark"-->
<!--            android:scaleType="centerInside"-->
<!--            android:src="@drawable/ic_day"-->
<!--            app:layout_constraintBottom_toBottomOf="@+id/tv_toolbar"-->
<!--            app:layout_constraintEnd_toStartOf="@+id/ib_menu"-->
<!--            app:layout_constraintTop_toTopOf="@+id/tv_toolbar"-->
<!--            app:layout_constraintVertical_bias="0.421" />-->

        <ImageButton
            android:id="@+id/ib_menu"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="16dp"
            android:background="?attr/actionBarItemBackground"
            android:contentDescription="@string/menu"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_menu"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/white" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.appcompat.widget.Toolbar>